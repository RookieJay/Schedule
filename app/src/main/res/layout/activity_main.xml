<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.stiles.schedule.MainActivity"
        android:id="@+id/main_layout"
        android:background="@drawable/book"
>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/background_pink"
                android:layout_height="0dp" android:layout_weight="0.04">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:background="#EED5D2"
                    android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#707070"
                    android:shadowColor="#A8A8A8"
                    android:shadowRadius="2.0"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="一"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#707070"
                    android:shadowColor="#A8A8A8"
                    android:shadowRadius="2.0"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="二"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#707070"
                    android:shadowColor="#A8A8A8"
                    android:shadowRadius="2.0"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="三"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#707070"
                    android:shadowColor="#A8A8A8"
                    android:shadowRadius="2.0"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="四"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#707070"
                    android:shadowColor="#A8A8A8"
                    android:shadowRadius="2.0"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="五"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#707070"
                    android:shadowColor="#A8A8A8"
                    android:shadowRadius="2.0"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="六"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#707070"
                    android:shadowColor="#A8A8A8"
                    android:shadowRadius="2.0"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="日"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
            >

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="11"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>
                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:layout_weight="1.0"
                        android:maxEms="1"
                        android:background="@drawable/background_gery"
                        android:gravity="center"/>

            </LinearLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:alpha="0.8"
                    android:background="@drawable/background_lightgreen"
                    android:id="@+id/thu">
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:alpha="0.8"
                    android:background="@drawable/background_lightblue"
                    android:id="@+id/wed">
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:alpha="0.8"
                    android:background="@drawable/background_lightgreen"
                    android:id="@+id/tue">
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_lightblue"
                    android:alpha="0.8"
                    android:id="@+id/sun">
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_lightblue"
                    android:alpha="0.8"
                    android:id="@+id/fri">
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_lightgreen"
                    android:alpha="0.8"
                    android:id="@+id/sat">
            </RelativeLayout>
            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/background_lightblue"
                    android:alpha="0.8"
                    android:id="@+id/mon">
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
